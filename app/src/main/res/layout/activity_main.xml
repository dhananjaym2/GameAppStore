<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/gameOverviewPadding"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/gameIcon"
        android:layout_width="@dimen/gameIconHeightAndWidth"
        android:layout_height="@dimen/gameIconHeightAndWidth"
        android:contentDescription="@string/gameIcon"
        android:src="@drawable/yellow_square_rounded_corner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>